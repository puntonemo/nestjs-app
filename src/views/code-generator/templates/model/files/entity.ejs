import {
    Exclude,
    Expose,
    instanceToPlain
} from 'class-transformer';

import { <%-model_name%>sRepository } from './<%-model_name.toLowerCase()%>.repository.<%-repository.template%>';
import { Create<%-model_name%>Dto } from './<%-model_name.toLowerCase()%>.dto.create';
import { Find<%-model_name%>Dto } from './<%-model_name.toLowerCase()%>.dto.find';
import { Update<%-model_name%>Dto } from './<%-model_name.toLowerCase()%>.dto.update';

export { <%-model_name%>sRepository, Create<%-model_name%>Dto, Find<%-model_name%>Dto, Update<%-model_name%>Dto };

export class <%-model_name%> {<%if(attributes) {%>
    //*******************************************************************/
    //* ATTRIBUTES<%
    for (const attribute of attributes) {%><%
    if(attribute.schemas) {%>
    @Expose({ groups: [<%-attribute.schemas.map(i=>`'${i}'`).join(', ')%>] })<%}%>
    public <%if(attribute.readonly){%>readonly <%}%><%-attribute.name%>?: <%-attribute.type%>;<%}%><%}%>

    //*******************************************************************/
    //* GENERIC MODEL
    @Exclude() // * Important * //
    serialize = (schemas?: string[] | string) =>
        instanceToPlain(
            this,
            schemas
                ? { groups: typeof schemas === 'string' ? [schemas] : schemas }
                : undefined
        );
    //*
    //*********************************************************************/
}
